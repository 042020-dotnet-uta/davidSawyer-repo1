@model MvcMovie.Models.OrderViewModel

@{
    ViewData["Title"] = "StoreHist";
}

    <h1>@Html.DisplayFor(model => model.Orders[0].Store) Order History</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Orders[0].OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orders[0].Customer)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Orders)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer)
            </td>
            <td>
                @*<a asp-action="Details" asp-route-id="@item.Id">Details</a>*@
            </td>
        </tr>
        }

    </tbody>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</table>
